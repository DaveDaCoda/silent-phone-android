<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?sp_actionbar_color"
    android:minHeight="?attr/actionBarSize"
    app:titleTextAppearance="?sp_ab_title_style"
    app:subtitleTextAppearance="?sp_ab_subtitle_style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/messaging_toolbar_margin"
            android:layout_marginBottom="@dimen/messaging_toolbar_margin"
            android:orientation="horizontal">

            <QuickContactBadge
                android:id="@+id/message_avatar"
                android:layout_width="@dimen/contact_photo_size"
                android:layout_height="@dimen/contact_photo_size"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/messaging_actionbar_photo_margin_right" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?sp_actionbar_title_text_color"
                    tools:text="Title" />

                <TextView
                    android:id="@+id/sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/sc_ng_text_grey"
                    android:visibility="gone"
                    tools:text="Subtitle" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.Toolbar>