<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/activity_horizontal_margin"
              android:layout_marginRight="@dimen/activity_horizontal_margin"
              android:orientation="vertical"
              tools:context=".activities.InCallActivity">

    <TextView
            android:id="@+id/VerifyInfoTextTop"
            style="@style/Widget.Silent.SimpleText.Medium"
            android:text="@string/verify_infotext_top"/>

    <TextView
            android:id="@+id/VerifyInfoTextSas"
            style="@style/Widget.Silent.SimpleText.Large"
            android:padding="@dimen/spacing_normal"
            android:gravity="center"
            tools:text="abcd"/>

    <TextView
            android:id="@+id/VerifyInfoTextBottom"
            style="@style/Widget.Silent.SimpleText.Medium"
            android:text="@string/verify_infotext_bottom"/>

    <EditText
            android:id="@+id/VerifyPeerName"
            style="@style/Widget.Silent.SimpleText.Medium"
            android:padding="@dimen/spacing_normal"
            android:inputType="textEmailAddress"
            tools:text="Some name"/>
</LinearLayout>
