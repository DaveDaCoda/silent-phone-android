<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/media_relay"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/spacing_normal"
              android:visibility="gone"
              tools:context=".activities.DialerActivity"
              tools:visibility="visible">

    <CheckBox
            android:id="@+id/media_relay_check"
            style="@style/Widget.Silent.DrawerCheckBox"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBaseline="@+id/media_relay_title"/>
    <TextView
            style="@style/Widget.Silent.SimpleText.Medium"
            android:id="@+id/media_relay_title"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_toRightOf="@id/media_relay_check"
            android:layout_toEndOf="@id/media_relay_check"
            android:text="@string/setting_p2p" />
    <TextView
            style="@style/Widget.Silent.SimpleText.Small"
            android:id="@+id/media_relay_text"
            android:layout_below="@id/media_relay_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginStart="@dimen/spacing_normal"
            android:maxLines="4"
            android:text="@string/setting_p2p_summary"/>

</RelativeLayout>
