<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messaging_sounds"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_normal"
    android:orientation="vertical"
    android:visibility="gone"
    tools:context=".activities.DialerActivity">

    <CheckBox
        android:id="@+id/messaging_sounds_check"
        style="@style/Widget.Silent.DrawerCheckBox"
        android:layout_alignBaseline="@+id/traversal_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/messaging_sounds_title"
        style="@style/Widget.Silent.SimpleText.Medium"
        android:layout_toEndOf="@id/messaging_sounds_check"
        android:layout_toRightOf="@id/messaging_sounds_check"
        android:paddingTop="@dimen/spacing_normal"
        android:text="@string/messaging_sounds" />

    <TextView
        style="@style/Widget.Silent.SimpleText.Small"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/messaging_sounds_title"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginStart="@dimen/spacing_normal"
        android:maxLines="5"
        android:text="@string/messaging_sounds_explanation"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
