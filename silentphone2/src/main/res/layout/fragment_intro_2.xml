<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_onboard3"
        android:scaleType="centerCrop"
        android:importantForAccessibility="no" />

    <com.silentcircle.common.widget.TriangleDrawable
        android:layout_width="70dp"
        android:layout_height="150dp"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:background="@null"
        app:triangleColor="@color/onboarding_decoration_red"
        app:position1x="0"
        app:position2x="1"
        app:position3x="0"
        app:position1y="0"
        app:position2y="0.7"
        app:position3y="1" />

    <com.silentcircle.common.widget.TriangleDrawable
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="130dp"
        android:layout_height="290dp"
        android:layout_marginTop="150dp"
        android:background="@null"
        app:triangleColor="@color/onboarding_decoration_red"
        app:position1x="1"
        app:position2x="0"
        app:position3x="1"
        app:position1y="0"
        app:position2y="0.3"
        app:position3y="1" />

    <LinearLayout
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_lets_get_started"
            android:textSize="24sp"
            android:textColor="@color/solid_white" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_search_for"
            android:layout_marginTop="@dimen/authorization_onboarding_description_margin_top"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45" />

    </LinearLayout>

</RelativeLayout>
