<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        style="@style/Widget.Silent.SimpleText"
        android:theme="@style/Widget.EditText.Light"
        android:id="@+id/edittext_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_large"
        android:layout_marginRight="@dimen/activity_horizontal_margin_large"
        android:hint="@string/messaging_screen_lock_enter_password_hint"
        android:textSize="@dimen/widget_screen_lock_label_text_size"
        android:textColor="?sp_dialog_text_color"
        android:textColorHint="@color/sc_ng_text_grey_3"
        android:textColorHighlight="@color/sc_ng_text_grey_3"
        android:imeOptions="actionGo"
        android:inputType="textPassword"
        android:privateImeOptions="nm"
        android:singleLine="true"
        android:tag="password"
        />

</LinearLayout>
