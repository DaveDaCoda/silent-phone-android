<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/amount_til_id"
        android:theme="@style/PaymentDialogWidgetHighlightColors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_large"
        android:layout_marginRight="@dimen/activity_horizontal_margin_large" >

        <EditText
            style="@style/Widget.Silent.SimpleText"
            android:theme="@style/Widget.EditText.Light"
            android:id="@+id/edittext_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/minimum_payment"
            android:textSize="@dimen/text_large"
            android:textColor="?sp_dialog_text_color"
            android:textColorHint="@color/sc_ng_text_grey_3"
            android:textColorHighlight="@color/sc_ng_text_grey_3"
            android:inputType="numberDecimal|number"
            android:imeOptions="actionGo"
            android:gravity="center"
            android:privateImeOptions="nm"
            android:singleLine="true"
            />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>