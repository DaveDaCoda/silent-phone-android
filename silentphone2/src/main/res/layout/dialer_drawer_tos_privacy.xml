<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/spacing_normal"
              tools:context=".activities.DialerActivity">

    <TextView
            style="@style/Widget.Silent.SimpleText.Medium"
            android:id="@+id/sc_privacy"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginStart="@dimen/spacing_normal"
            android:linksClickable="true"
            android:text="@string/sc_privacy_link" />
    <TextView
            style="@style/Widget.Silent.SimpleText.Medium"
            android:id="@+id/sc_tos"
            android:layout_below="@id/sc_privacy"
            android:layout_marginTop="@dimen/activity_vertical_margin_small"
            android:layout_alignLeft="@id/sc_privacy"
            android:layout_alignStart="@id/sc_privacy"
            android:text="@string/sc_tos_link"
            android:linksClickable="true"
            android:maxLines="4"/>

</RelativeLayout>
