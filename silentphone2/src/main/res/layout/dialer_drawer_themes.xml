<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/spacing_normal"
              tools:context=".activities.DialerActivity">

    <TextView
            style="@style/Widget.Silent.SimpleText.Medium"
            android:id="@+id/theme_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginStart="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_normal"
            android:visibility="gone"
            android:text="@string/select_theme"/>
    <TextView
            style="@style/Widget.Silent.SimpleText.Small"
            android:id="@+id/theme_text"
            android:layout_below="@id/theme_title"
            android:layout_alignLeft="@id/theme_title"
            android:layout_alignStart="@id/theme_title"
            android:maxLines="4"
            android:visibility="gone"
            tools:text="Current theme: Inverse"/>

</RelativeLayout>
