<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Silence.LinearLayout.Vertical"
    android:layout_height="match_parent">

    <EditText
        style="@style/Widget.Silent.SimpleText"
        android:theme="@style/Widget.EditText.Light"
        android:id="@+id/edittext_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_large"
        android:layout_marginRight="@dimen/activity_horizontal_margin_large"
        android:hint="Group name"
        android:textSize="@dimen/text_normal"
        android:textColor="?sp_dialog_text_color"
        android:textColorHint="@color/sc_ng_text_grey_3"
        android:textColorHighlight="@color/sc_ng_text_grey_3"
        android:imeOptions="actionGo"
        android:privateImeOptions="nm"
        android:singleLine="true"
        android:tag="password"
        />

    <EditText
        style="@style/Widget.Silent.SimpleText"
        android:theme="@style/Widget.EditText.Light"
        android:id="@+id/edittext_group_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_large"
        android:layout_marginRight="@dimen/activity_horizontal_margin_large"
        android:hint="Group description"
        android:textSize="@dimen/text_normal"
        android:textColor="?sp_dialog_text_color"
        android:textColorHint="@color/sc_ng_text_grey_3"
        android:textColorHighlight="@color/sc_ng_text_grey_3"
        android:imeOptions="actionGo"
        android:privateImeOptions="nm"
        android:singleLine="true"
        android:tag="password"
        />

</LinearLayout>
