<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape
               android:shape="rectangle" android:useLevel="false">
            <solid android:color="#ffffff"/>
        </shape>
    </item>

    <item>
        <shape
               android:shape="rectangle" android:useLevel="false">
            <!-- some Android devices require an explicit color setting,
                 define it as fully transparent -->
            <solid android:color="#00ffffff"/>
            <!--<stroke android:width="1dp" android:color="@color/button_stroke_color_dark_gray" /> -->
        </shape>
    </item>

</selector>
