<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="oval" android:useLevel="false">

            <size android:width="@dimen/floating_action_button_width" 
                  android:height="@dimen/floating_action_button_height"/>
            <solid android:color="#ffffff"/>
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="oval" android:useLevel="false">

            <size android:width="@dimen/floating_action_button_width" 
                  android:height="@dimen/floating_action_button_height"/>
            <!-- some Android devices require an explicit color setting,
                 define it as fully transparent -->
            <solid android:color="#00ffffff"/>
            <!--<stroke android:width="1dp" android:color="@color/button_stroke_color_dark_gray" /> -->
        </shape>
    </item>

</selector>
