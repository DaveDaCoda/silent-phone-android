<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" >

    <item>
        <shape android:shape="oval" android:useLevel="false">
        	<size android:width="@dimen/indicator_size"
                  android:height="@dimen/indicator_size"/>
            <solid android:color="@color/indicator_amber" />
            <stroke android:width="1dp" android:color="@color/solid_gray_light"/>
        </shape>
    </item>
</layer-list>

<!-- 
For android:shape you can use one of this values:
Constant  Value  Description
rectangle   0     Rectangle shape, with optional rounder corners.
oval        1     Oval shape.
line        2     Line shape.
ring        3     Ring shape.
-->
