<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Compose">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?sp_chat_compose_background_color</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="_ComposeText">
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:background">@drawable/bg_text_input</item>
        <item name="android:textColor">@color/chat_compose_text</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:inputType">textCapSentences|textMultiLine|textAutoCorrect</item>
    </style>

    <style name="ComposeText" parent="_ComposeText" >
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:paddingRight">@dimen/spacing_normal</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ComposeSend">
        <item name="android:layout_width">@dimen/messaging_compose_width</item>
        <item name="android:layout_height">@dimen/messaging_compose_height</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/ic_action_send</item>
    </style>

    <style name="ComposeRecord">
        <item name="android:layout_width">@dimen/messaging_compose_width</item>
        <item name="android:layout_height">@dimen/messaging_compose_height</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/action_button_voice_recording</item>
    </style>

    <style name="ComposeAttach">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:src">@drawable/ic_clear_white_24dp</item>
        <item name="android:tint">@color/sc_ng_text_dark</item>
        <item name="android:rotation">45</item>
    </style>

</resources>
