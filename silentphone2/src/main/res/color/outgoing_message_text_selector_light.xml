<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto">
    <item android:state_pressed="true" android:color="@color/sc_ng_text_grey"/>
    <item android:state_checked="true" android:color="@color/sc_ng_text_grey"/>

    <item custom:state_message_unknown="true" android:color="@color/chat_outgoing_message_disabled_text_color_light" />
    <item custom:state_message_failed="true" android:color="@color/chat_outgoing_message_disabled_text_color_light" />
    <item custom:state_message_composing="true" android:color="@color/chat_outgoing_message_disabled_text_color_light" />
    <item custom:state_message_composed="true" android:color="@color/chat_outgoing_message_disabled_text_color_light" />
    <item custom:state_message_sent="true" android:color="@color/chat_outgoing_message_disabled_text_color_light" />
    <item custom:state_message_sent_to_server="true" android:color="@color/chat_outgoing_message_disabled_text_color_light" />

    <!--  pre Marshmallow TextView (or AppCompatTextView v7 23.1.1) does not support
       ?attr/sp_outgoing_message_text_color here so a separate color list is necessary for each theme
       -->
    <item android:color="@color/sc_ng_text_dark" />
</selector>
